{
  "name": "self",
  "version": "0.0.1",
  "homepage": "https://yyywork.github.io/portfolio",
  "scripts": {
    "dev": "svelte-kit dev",
    "build": "svelte-kit build",
    "preview": "svelte-kit preview",
    "bpreview": "svelte-kit build && svelte-kit preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
    "deploy": "svelte-kit build && git add . && git commit -a && git push"
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^1.0.0-next.26",
    "@sveltejs/kit": "next",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "carbon-components-svelte": "^0.50.1",
    "carbon-icons-svelte": "^10.38.0",
    "carbon-pictograms-svelte": "^12.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-svelte3": "^3.2.1",
    "prettier": "^2.4.1",
    "prettier-plugin-svelte": "^2.4.0",
    "svelte": "^3.42.6",
    "svelte-check": "^2.2.6",
    "svelte-preprocess": "^4.9.4",
    "tslib": "^2.3.1",
    "typescript": "^4.4.3"
  },
  "type": "module",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.4",
    "chart.js": "^3.6.2",
    "dotenv": "^14.3.2",
    "firebase": "^9.6.4",
    "swiper": "^7.3.4"
  }
}
